{
  "references": [
    {"path": "./tsconfig.lib.json"},
    {"path": "./tsconfig.spec.json"}
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["**/*"]
}
